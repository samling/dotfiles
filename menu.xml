<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox 3">
		<item label="Terminal emulator">
			<action name="Execute">
				<execute>terminator</execute>
			</action>
		</item>
		<item label="Web browser">
			<action name="Execute">
				<execute>chromium</execute>
			</action>
		</item>
		<item label="File Browser">
			<action name="Execute">
				<execute>nautilus --no-desktop</execute>
			</action>
		</item>
		<!-- This requires the presence of the 'menu' package to work -->
		<menu id="/Debian"/>
		<separator/>
		<menu id="games" label="Games">
			<item label="Minecraft">
				<action name="Execute">
					<execute>sh /home/sboynton/games/minecraft.sh</execute>
				</action>
			</item>
			<item label="Steam">
				<action name="Execute">
					<execute>steam</execute>
				</action>
			</item>
		</menu>
		<separator/>
		<menu id="client-list-menu"/>
		<separator/>
		<item label="Nitrogen">
			<action name="Execute">
				<execute>nitrogen /home/sboynton/pictures/wallpaper</execute>
			</action>
		</item>
		<item label="ObConf">
			<action name="Execute">
				<execute>obconf</execute>
			</action>
		</item>
		<item label="ObMenu">
			<action name="Execute">
				<execute>obmenu</execute>
			</action>
		</item>
		<item label="Reconfigure">
			<action name="Reconfigure"/>
		</item>
		<item label="Restart">
			<action name="Restart"/>
		</item>
		<separator/>
		<item label="Logout">
			<action name="Exit"/>
		</item>
		<item label="Restart Computer">
			<action name="Execute">
				<execute>gksudo reboot</execute>
			</action>
		</item>
		<item label="Shutdown Computer">
			<action name="Execute">
				<execute>gksudo shutdown -h now</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
