# Ignore maximize requests from apps. You'll probably like this.
windowrule {
  name = windowrule-5
  suppress_event = maximize
  match:class = .*
}


# Fix some dragging issues with XWayland
windowrule {
  name = windowrule-6
  no_focus = on
  match:class = ^$
  match:title = ^$
  match:xwayland = 1
  match:float = 1
  match:fullscreen = 0
  match:pin = 0
}


# Highlight pinned windows
windowrule {
  name = windowrule-7
  border_color = rgb(DF8E1D)
  match:pin = 1
}


# Configure floating pacman/yay update window
windowrule {
  name = windowrule-8
  float = on
  size = 800 600
  center = on
  border_color = rgb(a6e3a1)
  border_size = 2
  match:class = wezterm-yay-update
}


# Configure floating clipse window
windowrule {
  name = windowrule-9
  #match:plugin = hyprbars:nobar
  match:class = (clipse) # disable hyprbars for clipse
}

windowrule {
  name = windowrule-10
  float = on
  center = on
  match:class = (clipse) # ensure you have a floating window class set if you want this behavior
}

windowrule {
  name = windowrule-11
  size = 622 652
  match:class = (clipse) # set the size of the window as necessary
}

windowrule {
  name = windowrule-12
  size = 600 800
  center = on
  float = on
  match:title = (Clipse GUI)
}


# Configure live caption floating window
